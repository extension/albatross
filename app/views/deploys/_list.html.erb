<table class="table table-bordered">
  <thead>
    <tr>
        <th>Time</th>
        <th>Application</th>
        <th>Location</th>
        <th>Coder</th>
        <th>Revision</th>
        <th>Comment</th>
        <th>Runtime</th>
        <th>Details</th>
    </tr>
  </thead>
  
  <tbody>
    <%- for deploy in deploylist -%>
  	<tr>
      <td><%= deploy.finish.to_s %></td>
      <td><%= deploy.application.name %></td>
      <td><%= deploy.location %></td>
      <td><%= deploy.coder.name %></td>
	  <%- if(!deploy.deployed_revision.blank?) -%>
	  <td><%= link_to(deploy.deployed_revision,github_url_for_deploy(deploy)) %></td>
  	  <%- else -%>
	  	<td>n/a</td>
	  <%- end -%>
				<%- if @currentcoder -%>
				<td><%= best_in_place(deploy, :comment, { :type => :textarea, :path => setcomment_deploy_path(:id => deploy.id)})%></td>
		  	<%- else -%>
					<td><%= deploy.comment %></td>
				<%- end -%>
      <td>
        <%= time_period_to_s(deploy.finish - deploy.start,true) %>
      </td>
      <td>
		  <%- if deploy.success? -%>
		  <%= link_to('success', deploy_path(deploy), :class => 'label label-success') %></td>
		  <%- else -%>
		  <%= link_to('failed', deploy_path(deploy), :class => 'label label-important') %></td>
		  <%- end -%>
	  </td>
    </tr>
  <%- end -%>
  </tbody>
</table>
