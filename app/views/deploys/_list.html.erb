<table class="table table-bordered">
  <thead>
    <tr>
        <th>Time (UTC)</th>
        <th>Application</th>
        <th>Location</th>
        <th>Coder</th>
        <th>Revision</th>
        <th>Comment</th>
        <th>Details</th>
    </tr>
  </thead>
  
  <tbody>
    <%- for deploy in deploylist -%>
  	<tr>
      <td><%= deploy.finish.to_s %></td>
      <td><%= deploy.application.name %></td>
      <td><%= deploy.location %></td>
      <td><%= deploy.coder.name %></td>
	  <%- if(!deploy.deployed_revision.blank?) -%>
	  <td><%= link_to(deploy.deployed_revision,github_url_for_deploy(deploy)) %></td>
  	  <%- else -%>
	  	<td>n/a</td>
	  <%- end -%>
      <td><%= deploy.comment %></td>	  
      <td>
		  <%- if deploy.success? -%>
		  <%= link_to('success', deploy_path(deploy), :class => 'label label-success') %></td>
		  <%- else -%>
		  <%= link_to('failed', deploy_path(deploy), :class => 'label label-important') %></td>
		  <%- end -%>
	  </td>
    </tr>
  <%- end -%>
  </tbody>
</table>
