<%- @page_title = "Cronmon Servers" -%>
<div class="page-header">
  <h1<%= @page_title %></h1>
</div>  

<div class="row">
  <div class="col-md-12">

    <table class="table table-bordered">
      <thead>
        <tr>
            <th>Server</th>
            <th>Registered At</th>
            <th>Last Heartbeat At</th>
            <th>Last Cron At</th>
            <th>Crons</th>
        </tr>
      </thead>
      
      <tbody>
        <%- @serverlist.each do |cs| -%>
        <tr>
          <td><%= link_to(cs.name,server_cronmons_path(id: cs.id)) %></td>
          <td><%= cs.created_at %></td>
          <td><%= cs.last_heartbeat_at %></td>
          <td><%= cs.last_cron_at %></td>
          <td><%= cs.cronmons.count %></td>
        </tr>
      <%- end -%>
      </tbody>
    </table>
  </div>