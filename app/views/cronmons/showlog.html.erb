<% @page_title = "CronMon Log for #{@cronmon.label} ##{@cronmon_log.id}" %>
<div class="page-header">
  <h1><%= @page_title %></h1>
</div>  


<div class="row-fluid">
  <div class="col-md-12">
   <h3>Log Information
  <%- if @cronmon_log.success? -%>
  <span class="label label-success">Success!</span>
  <%- else -%>
  <span class="label label-important">Failed!</span>
  <%- end -%>
   
   </h3>
  <table class="table table-bordered">
 
    <tbody>
      <tr>
        <td>Command</td>
        <td><%= @cronmon_log.command %></td>
      </tr>   
      <tr>
        <td>Started</td>
        <td><%= @cronmon_log.start.to_s %></td>
      </tr>        
      <tr>
        <td>Runtime</td>
          <td><%= @cronmon_log.runtime %></td>
      </tr>
     
    </tbody>
  </table>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-12">
    <h3>stdout </h3>
  <pre>
    <%= @cronmon_log.stdout %>
  </pre>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-12">
    <h3>stderr </h3>
  <pre>
    <%= @cronmon_log.stderr %>
  </pre>
  </div>
</div>